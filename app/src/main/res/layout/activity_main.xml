<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/movieTextView"
        android:background="@color/black"
        android:textColor="#d6001c"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Movie"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/VaultTextView"
        android:background="@color/black"
        android:textColor="#d6001c"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Vault"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.903"
        app:layout_constraintStart_toEndOf="@+id/movieTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="84dp"
        android:background="@color/black"
        android:gravity="center"
        android:text="Welcome"
        android:textColor="#d6001c"
        android:textSize="40sp"
        app:layout_constraintHorizontal_bias="0.436"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:background="#444444"
        android:text="Search"
        android:textColor="#d6001c"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeTextView" />

    <Button
        android:id="@+id/browseButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:background="#444444"
        android:text="Browse"
        android:textColor="#d6001c"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchButton" />

    <Button
        android:id="@+id/changeUserInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:layout_marginTop="28dp"
        android:background="#444444"
        android:text="@string/settings"
        android:textColor="#d6001c"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/browseButton" />

    <Button
        android:id="@+id/manageUsersButton"
        android:background="#444444"
        android:textColor="#d6001c"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/manage_users"
        android:layout_marginTop="25dp"
        android:visibility="invisible"
        android:layout_margin="16dp"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/changeUserInfoButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/promoteUsersToAdminButton"
        android:background="#444444"
        android:textColor="#d6001c"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/promote_users"
        android:layout_marginTop="25dp"
        android:visibility="invisible"
        android:layout_margin="16dp"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/manageUsersButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>